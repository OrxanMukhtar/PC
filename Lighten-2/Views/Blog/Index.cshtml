@model List<Blog>

<div class="brand_color">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="titlepage">
                    <h2>blog</h2>
                </div>
            </div>
        </div>
    </div>

</div>
<!-- Lastestnews -->
<div class="Lastestnews blog">
    <div class="container">
        <div class="row">
            
           @foreach (var blogs in Model)

            {

                <div class="col-md-12">
                    <div class="titlepage">

                        <span>@blogs.Title </span>
                    </div>
                </div>
 }
        </div>
        <div class="row">
           @foreach(var blogs in Model)
            {

                <div class="col-xl-4 col-lg-4 col-md-4 col-sm-12">
                    <div class="news-box">
                        <figure><img src="images/@blogs.Image" alt="img" /></figure>
                        <h3>Best Music</h3>
                        <span> @blogs.Date</span><span>Comment</span>
                        <p>@blogs.Comment </p>
                    </div>
                    
 
            
            </div>
            }
        </div>
    </div>
</div>
<!-- end Lastestnews -->
